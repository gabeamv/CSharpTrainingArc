<UserControl x:Class="SecureNotes.Views.AuthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SecureNotes.Views"
             xmlns:userControls="clr-namespace:SecureNotes.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="Title" Text="Welcome To Secure Notes!" FontSize="24" 
                   HorizontalAlignment="Center" Margin="0,25,0,0" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBox x:Name="TextInputUsername" VerticalAlignment="Center" Margin="5" Panel.ZIndex="1" Background="Transparent" 
                Text="{Binding UsernameText}"/>
            <TextBlock x:Name="TextInitialUsername" Text="{Binding UsernameLabel}" FontSize="12" HorizontalAlignment="Left" 
                VerticalAlignment="Center" Margin="10, 0, 0 ,0" FontWeight="ExtraLight" Width="1"/>
            <Button x:Name="XButtonUsername" HorizontalAlignment="Right" VerticalAlignment="Center" Width="20" Content="X" 
                FontSize="12" Margin="5" Background="Transparent" Panel.ZIndex="2" BorderThickness="0" 
                FontWeight="ExtraLight"/>

            <TextBox x:Name="TextInputPassword" VerticalAlignment="Center" Margin="5" Panel.ZIndex="1" Background="Transparent" 
                Text="{Binding PasswordText}"/>
            <TextBlock x:Name="TextInitialPassword" Text="{Binding PasswordLabel}" FontSize="12" HorizontalAlignment="Left" 
                VerticalAlignment="Center" Margin="10, 0, 0 ,0" FontWeight="ExtraLight"/>
            <Button x:Name="XButtonPassword" HorizontalAlignment="Right" VerticalAlignment="Center" Width="20" Content="X" 
                FontSize="12" Margin="5" Background="Transparent" Panel.ZIndex="2" BorderThickness="0" 
                FontWeight="ExtraLight"/>

            <Button Grid.Row="1" Content="Register" Height="25" Margin="0, 0, 0, 5"
                Width="50" Command="{Binding RegisterCommand}"/>
            <Button Grid.Row="1" Content="Login" Height="25" Margin="0, 0, 0, 5"
                Width="50" Command="{Binding LoginCommand}"/>
            <TextBlock Text="{Binding FeedbackMessage}" Height="100" Width="700"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>

        <!-->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <userControls:ClearableTextBox x:Name="UsernameTextBox" TextLabel="Username"/>
            <userControls:ClearableTextBox x:Name="PasswordTextBox" TextLabel="Password"/>
            <Button x:Name="LoginButton" Content="Login" Height="25" Width="70" Command="{Binding NavigateCommand}"/>
        </StackPanel>
        -->
    </Grid>
</UserControl>
